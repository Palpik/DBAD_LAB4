@model WebApp.ViewModels.Users.EditUserViewModel

@{
    ViewData["Title"] = "Change info";
}

<div class="row">
    <div class="col-md-3">
        <h3>Change user role</h3>
        <hr />
        <form asp-action="Edit" asp-controller="Users">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class = "form-floating mb-3">
                <input type="email" class="form-control" value="@Model.Email" asp-for="Email">
                <label>Email</label>
            </div>
            <div class="form-floating mb-3">
                <input type="password" asp-for="OldPassword" class="form-control">
                <label>Current password</label>
            </div>

            <div class="form-floating mb-3">
                <input type="password" asp-for="NewPassword" class="form-control">
                <label>New passwords</label>
            </div>
            <div class="form-floating mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class=" btn btn-danger" asp-action="Index">Back</a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
